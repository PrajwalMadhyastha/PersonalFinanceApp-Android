<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!--
    This file specifies which app data to include in Google's Auto Backup.
    It's the modern, recommended way to handle cloud backups.
    -->

    <!-- Include all files in the database directory. This covers your Room database. -->
    <include
        domain="database"
        path="." />

    <!-- Include all SharedPreferences files. This covers your settings. -->
    <include
        domain="sharedpref"
        path="." />

</full-backup-content>
